{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./build",
    "module": "commonjs",
    "allowJs": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
